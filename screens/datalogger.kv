#:kivy 2.0.0

<CustLabel@Label>:
    color: 1 , 0.250 , 0.452 , 1
    font_size: 25
    size_hint: 0.50,0.1

<StartScreen>:
    data_text_input: Name, Data, Godzina, Zleceniodawca, Źródło, Personel, Temperatura, Ciśnienie, Ilość
    BoxLayout:
        orientation:'vertical'
        Label:
            text:'Test'
            pos_hint: {'center_x': 0.5, 'y': 1}
            size_hint: 1.0, 0.1
            font_size: 30

        Grid1Layout:
            cols: 2
            rows: 9
            padding: ('25dp', '25dp', '25dp', '25dp')
            spacing: '20dp'

            CustLabel:
                text: 'Nazwa pliku:'

            TextInput:
                id: Name

            CustLabel:
                text:'Data:'

            TextInput:
                id: Data
                hint_text:'dd/mm/rrrr'
                height: 30

            CustLabel:
                text:'Godzina przyjazdu:'

            TextInput:
                id: Godzina

            CustLabel:
                text:'Zleceniodawca:'

            TextInput:
                id: Zleceniodawca

            CustLabel:
                text:'Źródło emisji:'

            TextInput:
                id: Źródło

            CustLabel:
                text:'Personel:'

            TextInput:
                id: Personel

            CustLabel:
                text:'Temperatura otoczenia:'

            TextInput:
                id: Temperatura

            CustLabel:
                text:'Ciśnienie atmosferyczne:'

            TextInput:
                id: Ciśnienie

            CustLabel:
                text:'Ilość powtórzeń:'

            TextInput:
                id: Ilość

        BoxLayout:
            orientation:'vertical'
            Button:
                text:'Next'
                on_press: root.save()
                on_press: root.manager.current = 'menu'

            Button:
                text:'Aspiracja'
                on_press: root.save()
                on_press: root.manager.current = 'aspiration'

            Button:
                text:'Pył'
                on_press: root.save()
                on_press: root.manager.current = 'dust'
            Button:
                text:'H20 14970'
                on_press: root.save()
                on_press: root.manager.current = 'h2o'
            Button:
                text:'Sprawdzenie Analizatora Gazu'
                on_press: root.save()
                on_press: root.manager.current = 'gas_analyzer_check'
            Button:
                text:'Pomocnicze'
                on_press: root.save()
                on_press: root.manager.current = 'helpers'
            Button:
                text:'Baza sprzętu'
                on_press: root.save()
                on_press: root.manager.current = 'equipment_base'


